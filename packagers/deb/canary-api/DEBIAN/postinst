#!/bin/bash

set -e

function add_extension {
    NOVA_CONF=$1
    EXTENSION=$2

    if [ -f $NOVA_CONF ]; then
        # Add the extension.
        if ! cat $NOVA_CONF | grep $EXTENSION >/dev/null 2>&1; then
            grep "\[DEFAULT\]" $NOVA_CONF >/dev/null 2>&1 && \
                echo "osapi_compute_extension=$EXTENSION" >> $NOVA_CONF || \
                echo "--osapi_compute_extension=$EXTENSION" >> $NOVA_CONF
        fi

        # Restart the api service (if running).
        service nova-api restart 2>/dev/null || true
        service nova-api-os-compute restart 2>/dev/null || true
    fi
}

case $1 in
    configure)
        add_extension \
            /etc/nova/nova.conf \
            nova.api.openstack.compute.contrib.standard_extensions
        add_extension \
            /etc/nova/nova.conf \
            canary.extension.Canary_extension
        ;;
esac
